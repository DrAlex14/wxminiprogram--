.collect {
  background-color: #f3f4f6;
}
.collect .collect_main .collect_title {
  display: flex;
  padding: 15rpx 0;
}
.collect .collect_main .collect_title .collect_tips {
  border: 1rpx solid #ccc;
  padding: 10rpx;
  margin: 10rpx;
  background-color: #fff;
}
.collect .collect_main .collect_title .active {
  border-color: currentColor;
  color: var(--themeColor);
}
.collect .collect_content {
  background-color: #fff;
}
.collect .collect_content .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.collect .collect_content .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect .collect_content .goods_item .goods_img_wrap image {
  width: 70%;
}
.collect .collect_content .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect .collect_content .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect .collect_content .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
